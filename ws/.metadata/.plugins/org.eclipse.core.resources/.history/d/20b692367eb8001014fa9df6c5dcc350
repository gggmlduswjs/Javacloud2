package day01Prac제네릭클래스;

import java.util.ArrayList;

public class ArrayList사용하기 {

	public static void main(String[] args) {
		
		
		// Dog만 담을 리스트
		
		ArrayList list = new ArrayList();
		
		list.add("안녕");
		list.add(new Dog("뽀삐",2));
		
		// 해석의 도구 : 자료형
		// 상속관계에서 부모형으로 받는거 : 업캐스팅
		Object obj = list.get(1);
	
		// 다운캐스팅 (올바른 다운캐스팅)
		
		Dog dog = (Dog) obj;
		System.out.println(dog.getAge());
		dog.getName();
		
		//Dog만 담을 수 있다.
		//다운캐스팅 필요없음
		ArrayList<Dog> doglist = new ArrayList<>();
		
		doglist.add(new Dog("뽀삐",2));
		doglist.add(new Dog("찰스",3));
		
		Dog result =  doglist.get(0);
	}

}
